  <body>
    <h1>Available Shoes!</h1>
        <% shoesData.forEach((shoe) => { %>
            <div style="width: 30%; display:inline-block; min-height: 20px; background-color: red; margin-left: 10px; margin-top: 20px;">
              <img src = "/<%= shoe.Image %>"/>
              <%= shoe.Make %>
              <%= shoe.Model %>
              <%= shoe.Price %>

            </div>
        <% }); %>
  </body>
  
